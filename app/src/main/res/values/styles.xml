<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#03ccd3</item>
        <item name="colorPrimaryDark">#0e0e1b</item>
        <item name="colorAccent">#03ccd3</item>
    </style>
    <style name="AppThemeDetailedActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#03ccd3</item>
        <item name="colorPrimaryDark">#15162b</item>
        <item name="colorAccent">#03ccd3</item>
    </style>

    <style name="StyleForTheInformationText">
        <item name="android:textColor">#005d04</item>
        <item name="colorPrimary">#03ccd3</item>
        <item name="fontFamily">@font/main_font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="StyleForTheBaseText">
        <item name="android:textColor">#000000</item>
        <item name="colorPrimary">#03ccd3</item>
